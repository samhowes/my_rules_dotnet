dotnet_binary(
    name = "clientapp",
    srcs = glob([
        "*.cs",
        "Controllers/*.cs",
        "Pages/*.cs",
    ]),
    content = glob([
        "*.json",
        "ClientApp/*.json",
        "ClientApp/public/*.json",
    ]),
    sdk = "Microsoft.NET.Sdk.Web",
    target_framework = "net5.0",
    visibility = ["//visibility:public"],
    deps = ["@nuget//Microsoft.AspNetCore.SpaServices.Extensions"],
)

dotnet_publish(
    name = "publish",
    target = ":clientapp",
)
