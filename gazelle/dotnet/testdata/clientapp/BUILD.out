load("@my_rules_dotnet//dotnet:defs.bzl", "dotnet_binary", "dotnet_publish")

# gazelle-err: unsupported project element: Target
# gazelle-err: unsupported project element: Target
dotnet_binary(
    name = "clientapp",
    srcs = glob([
        "*.cs",
        "Controllers/*.cs",
        "Pages/*.cs",
    ]),
    content = glob([
        "*.json",
    ]),
    msbuild_properties = {
        "TypeScriptCompileBlocked": "true",
        "TypeScriptToolsVersion": "Latest",
        "IsPackable": "false",
        "SpaRoot": "ClientApp\\",
        "DefaultItemExcludes": "$(DefaultItemExcludes);$(SpaRoot)node_modules\\**",
    },
    sdk = "Microsoft.NET.Sdk.Web",
    target_framework = "net5.0",
    visibility = ["//visibility:public"],
    deps = ["@nuget//Microsoft.AspNetCore.SpaServices.Extensions"],
)

dotnet_publish(
    name = "publish",
    target = ":clientapp",
)
